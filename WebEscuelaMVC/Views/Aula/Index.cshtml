@model IEnumerable<WebEscuelaMVC.Models.Aula>
@{
    ViewData["Title"] = "Index Aula";
}
    <h1>AULAS</h1>
    @Html.ActionLink("Nueva Aula","Create","Aula")
    <table>
        <tr> 
            <th>@Html.DisplayNameFor(model=>model.Numero)</th>
            <th>@Html.DisplayNameFor(model=>model.Estado)</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model=>item.Numero)</td>
                <td>@Html.DisplayFor(model=>item.Estado)</td>
                <td>
                    @Html.ActionLink("Ver","Details","Aula",new{id=item.Id})
                    @Html.ActionLink("Editar","Edit","Aula",new{id=item.Id})
                    @Html.ActionLink("Eliminar","Delete","Aula",new{id=item.Id})
                </td>
            </tr>
        }
    </table>
    <br />
    @Html.ActionLink("Volver","Index","Home")

